            <p><input type="text" name="last_name" id="" required> </p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required></p>
            <label for="favorite_movie_id">Favorite Movie:</label>
<select id="favorite_movie_id" name="favorite_movie_id" required>
    <% movies.forEach(movie => { %>
        <option value="<%= movie.id %>"><%= movie.title %></option>
    <% }); %>
</select>

            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
        </form>
